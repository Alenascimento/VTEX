                    },
                    "id": {
                        "type": "string",
                        "default": "5"
                    },
                    "refId": {
                        "type": "string",
                        "default": "12"
                    },
                    "name": {
                        "type": "string",
                        "default": "Insert name here"
                    },
                    "price": {
                        "type": "integer",
                        "format": "int32",
                        "default": "50"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32",
                        "default": 1
                    }
                }
            },
