                "required": [
                    "Items",
                    "UtmSource",
                    "UtmMedium",
                    "UtmCampaign",
                    "UtmInternalCampaign",
                    "SalesChannel",
                    "Email"
                ],
                "type": "array",
                "properties": {
                    "items": {
                        "type": "array",
                        "default": {
                            "items": [
                                {
                                    "index": 0,
